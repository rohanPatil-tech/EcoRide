<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EcoRide - Car Rental Data</title>
    <%- include('favicon.ejs') %>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" 
      rel="stylesheet"
    >
    <link rel="stylesheet" href="/styles/styles.css">
    <style>
        body {
            background-color: #f5f5f5;
            color: #333;
        }
        .table thead {
            background-color: #4caf50;
            color: white;
        }
        .navbar {
            background-color: #4caf50;
        }
        .navbar-brand {
            color: white;
            font-weight: bold;
        }
        .navbar-brand:hover {
            color: #e8f5e9;
        }
        .my-div {
            margin: 30px; /* Adds space around the outside of the div */
        }
    </style>
</head>
<body>
    <div class="my-div">
        <header>
          <%- include('header.ejs') %>
        </header>
    </div>

    <!-- Page Content -->
    <div class="container mt-5">
        <h1 class="text-center mb-4">EcoRide - Car Rental Data</h1>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Car Company</th>
                        <th>Car Model</th>
                        <th>User Name</th>
                        <th>Trip Status</th>
                        <th>Trip Cost</th>
                    </tr>
                </thead>
                <tbody>
                    <% results.forEach(function(c) { %>
                        <tr>
                            <td><%= c.carCompany %></td>
                            <td><%= c.carModel %></td>
                            <td><%= c.name %></td>
                            <td>
                                <% if (c.tripStatus === 1) { %>
                                    <span class="badge bg-success">Completed</span>
                                <% } else if (c.tripStatus === 0) { %>
                                    <span class="badge bg-warning text-dark">Ongoing</span>
                                <% } else { %>
                                    <span class="badge bg-danger">Unknown Status</span>
                                <% } %>
                            </td>
                            <td><%= c.tripCost %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <div class="my-div text-center mt-4">
        <a href="/<%=username%>/seller/profile" class="btn btn-success">Back</a>
    </div>

    <!-- Bootstrap JS -->
    <script 
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js">
    </script>
</body>
</html>
